# PhaseGrid Production Environment Variables
# Copy this file to .env and fill in your actual values

# Google Sheets Configuration
SHEET_ID=your_google_sheet_id_here
GOOGLE_SA_JSON=/path/to/credentials.json
# Or use JSON string directly:
# GOOGLE_SA_JSON='{"type": "service_account", "project_id": "...", ...}'

# Twilio Configuration (for SMS alerts)
TWILIO_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM=+12345678901  # Your Twilio phone number
PHONE_TO=+19876543210,+10987654321  # Comma-separated list of recipient numbers

# Discord Configuration (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/xxxxx

# Bankroll Configuration
BANKROLL=1000  # Your starting bankroll in dollars

# PrizePicks Configuration (if using direct API)
PRIZEPICKS_API_KEY=your_prizepicks_api_key_if_available

# Basketball Reference Configuration
BREF_DELAY=3  # Delay between requests to avoid rate limiting

# Retry Configuration
RETRY_MAX=5  # Maximum number of retries for API calls
RETRY_DELAY=1  # Base delay between retries in seconds

# Phase Data Configuration
PHASE_DATA_PATH=data/phase_data.json
PLAYER_MAPPINGS_PATH=data/player_mappings.json

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/phasegrid.log

# Betting Configuration
MIN_CONFIDENCE=0.65  # Minimum confidence threshold for slips
MAX_SLIPS_PER_DAY=10  # Maximum slips to generate per day
MIN_BET_PERCENT=0.01  # Minimum bet as percentage of bankroll (1%)
MAX_BET_PERCENT=0.05  # Maximum bet as percentage of bankroll (5%)
KELLY_FRACTION=0.25  # Kelly Criterion safety factor (quarter Kelly)

# Environment
ENVIRONMENT=development  # development, staging, production