# PhaseGrid Environment Configuration Template
# Copy this file to .env and fill in your values

# API Configuration
RESULTS_API_URL=https://api.prizepicks.com/v1
RESULTS_API_KEY=your_api_key_here
RESULTS_API_TIMEOUT=30
API_RATE_LIMIT_DELAY=0.5

# Database Configuration
DATABASE_URL=sqlite:///data/phasegrid.db
DATABASE_POOL_SIZE=5

# Alert Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_HERE
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WEBHOOK_HERE

# Alert Configuration
HIGH_ROI_THRESHOLD=0.20
LOW_ROI_THRESHOLD=-0.20
ALERT_MAX_RETRIES=3
ALERT_BASE_DELAY=1.0
ALERT_MAX_DELAY=60.0

# Cache Configuration
RESULTS_CACHE_TTL=3600

# Trading Configuration
DEFAULT_BANKROLL=1000.0
MAX_SLIP_LEGS=5
MIN_CONFIDENCE=0.6

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/phasegrid.log
